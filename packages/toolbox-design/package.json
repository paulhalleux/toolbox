{
  "name": "@toolbox/design",
  "version": "0.0.0",
  "description": "Design system for Toolbox",
  "author": "HALLEUX, Paul <mail@paulhalleux.be>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:project && pnpm run build:types && pnpm run build:assets",
    "build:assets": "bun src/scripts/generate-css.ts",
    "build:project": "tsup src/index.ts",
    "build:types": "tsc -p tsconfig.dts.json --declaration --emitDeclarationOnly --declarationDir dist"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@toolbox/eslint-config": "workspace:*",
    "@toolbox/typescript-config": "workspace:*",
    "@types/bun": "^1.1.0",
    "@types/lodash": "^4.17.0",
    "bun": "^1.1.5",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2"
  }
}